  "scripts": {
    "---- WEB ----": "",
    "start:web": "nx serve web",
    "build": "nx build web",
    "ssr": "node dist/apps/web/server/ru/server.mjs",
    "extract-i18n": "nx extract-i18n web --out-file=apps/web/src/i18n/source.xlf",
    "---- BACKEND ----": "",
    "start:backend": "yarn nx serve backend",
    "build:backend": "yarn nx build backend",
    "serve:backend": "node dist/apps/backend/main",
    "start:db": "docker-compose -f ./apps/backend/docker-compose.yml up -d",
    "stop:db": "docker-compose -f ./apps/backend/docker-compose.yml stop",
    "typeorm": "ts-node -P apps/backend/tsconfig.app.json  -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:run": "yarn typeorm migration:run -d apps/backend/src/app/config/ormconfig.ts",
    "migration:revert": "yarn typeorm migration:revert -d apps/backend/src/app/config/ormconfig.ts",
    "migration:create": "yarn typeorm migration:create $0",
    "---- UTILS ----": "",
    "reset": "nx reset",
    "release": "ts-node ./scripts/release.ts"
  },
